<div id="gallery" class="relative mx-auto mb-16 w-11/12 shadow-lg xl:max-w-7xl">
  <div x-data="carousel()">
    <!-- Slide display -->
    <img
      class="h-auto w-full overflow-hidden rounded-md bg-stone-50 object-cover object-center"
      x-bind:src="images[selected]"
      alt="mountains"
      width="1920"
      height="1080"
      loading="lazy"
      decoding="async"
    />

    <!-- Prev button -->
    <button
      @click="if (selected > 0 ) {selected -= 1} else { selected = images.length - 1 }"
      class="group absolute inset-y-0 left-0 ml-4 -mt-3 h-full w-12 cursor-pointer px-0 py-[25%]"
      aria-label="Previous button"
    >
      <div
        class="invisible flex h-12 w-12 items-center justify-center rounded-3xl bg-stone-500 group-hover:visible"
      >
        <span class="flex items-center justify-center text-4xl text-stone-50">
          &larr;
        </span>
      </div>
    </button>

    <!-- Next button -->
    <button
      @click="if (selected < images.length - 1  ) {selected += 1} else { selected = 0 }"
      class="group absolute inset-y-0 right-0 mr-4 -mt-3 h-full w-12 cursor-pointer px-2 py-[25%]"
      aria-label="Next button"
    >
      <div
        class="invisible flex h-12 w-12 items-center justify-center rounded-3xl bg-stone-500 group-hover:visible"
      >
        <span class="flex items-center justify-center text-4xl text-stone-50">
          &rarr;
        </span>
      </div>
    </button>

    <!-- Bottom navigation dots -->
    <div class="absolute bottom-0 flex w-full justify-center space-x-4 p-8">
      <template x-for="(image,index) in images" :key="index">
        <button
          @click="selected = index"
          :class="{'bg-stone-300': selected == index, 'bg-stone-500': selected != index}"
          class="h-8 w-8 rounded-3xl ring-2 ring-stone-300 hover:bg-stone-300"
          aria-label="Gallery navigation dots"
        ></button>
      </template>
    </div>
  </div>
  <!-- Image array -->
  <script>
    const carousel = () => {
      return {
        selected: 0,
        images: [
          "https://res.cloudinary.com/goodreds/image/upload/w_1240,h_698,c_crop/v1650345567/goodreds-netlify/gallery/buttons-example-dark.png",
          "https://res.cloudinary.com/goodreds/image/upload/w_1240,h_698,c_crop/v1650345567/goodreds-netlify/gallery/buttons-example-light.png",
          "https://res.cloudinary.com/goodreds/image/upload/w_1240,h_698,c_crop/v1650346997/goodreds-netlify/gallery/state-buttons-dark.png",
          "https://res.cloudinary.com/goodreds/image/upload/w_1240,h_698,c_crop/v1650346997/goodreds-netlify/gallery/state-buttons-light.png",
          "https://res.cloudinary.com/goodreds/image/upload/w_1240,h_698,c_crop/v1650346998/goodreds-netlify/gallery/access-colour-array.png",
          "https://res.cloudinary.com/goodreds/image/upload/w_1240,h_698,c_crop/v1650346999/goodreds-netlify/gallery/typography.png",
          "https://res.cloudinary.com/goodreds/image/upload/w_1240,h_698,c_crop/v1650346998/goodreds-netlify/gallery/colour-wheel.png"
        ],
      };
    };
  </script>
</div>

