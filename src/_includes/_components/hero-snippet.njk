                          <a href="#" class="buttonDefaults buttonSecondaryAlt text-sky-700 dark:text-pink-500 mx-auto w-full">
                            {{ heroContent.buttonTextAlt }}
                          </a>
                          <a href="#" class="buttonDefaults buttonPrimary bg-sky-700 dark:bg-pink-500 text-sky-50 mx-auto w-full">
                            <span class="drop-shadow-md">{{ heroContent.buttonText }}</span>
                          </a>
                        </div>
                      </div> #}
      </div>
    {% else %}
      <div class="relative min-h-64 w-full md:w-1/2 xl:w-3/4 mx-auto flex flex-col items-center justify-center px-8 py-36">
        <h1 class="break-words font-chinook text-5xl sm:text-6xl md:text-6xl lg:text-6xl xl:text-7xl text-stone-900 drop-shadow-sm
            shadow-neutral-400 dark:shadow-black dark:text-white text-center">
          <span class="relative z-30">{{ heroContent.headline }}</span>
          {% if heroContent.page === 'homepage' %}
            <span class="before:block before:absolute before:-inset-1 before:-skew-y-1 before:bg-gradient-to-tr before:from-yellow-400
                before:to-yellow-300 relative inline-block shadow-md z-10">
              <span class="relative z-20 bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500">{{ heroContent.headlineEmphasis }}</span>
            {% endif %}
          </span>
        </h1>
        <p class="above-the-fold text-2xl text-slate-900/70 dark:text-white/70 font-medium shadow-slate-900/50 drop-shadow
            text-center">
          {{ heroContent.description }}
        </p>
        <div id="buttons" class="flex flex-col mx-auto w-full pt-12">
          <div
            class="above-the-fold buttons flex shrink flex-col justify-start items-center gap-8 text-center lg:flex-row">
            {# Run some checks and only render the buttons that have a title in data.js - ensures both any buttons have a title and also that buttons are only rendered if required on the particular page hero component #}
            {% if heroContent.buttonTextAlt %}
              <a href="#" class="buttonDefaults buttonSecondaryAlt text-sky-700 dark:text-pink-500 mx-auto w-full">
                {{ heroContent.buttonTextAlt }}
              </a>
            {% endif %}
            {% if heroContent.buttonText %}
              <a href="#" class="buttonDefaults buttonPrimary bg-sky-700 dark:bg-pink-500 text-sky-50 mx-auto w-full">
                <span class="drop-shadow-md">{{ heroContent.buttonText }}</span>
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}
  </article>
</div></div>
