                                </article>
                              </div>
                              <video
                                id="heroVideo"
                                class="rounded-md overflow-clip"
                                preload="true"
                                autopictureinpicture="true"
                                width="860"
                                height="600"
                                posterframe="../../_assets/_video/poster.jpg">
                                <source src="../../_assets/_video/audience.webm" type="video/webm"/>
                                <source src="../../_assets/_video/audience.mp4" type="video/mp4"/>
                                <source src="../../_assets/_video/audience.ogv" type="video/ogv"/>
