<div class="w-full relative">
  <div class="flex items-start m-auto ">
    <figure class="post-figure absolute opacity-50">
      {# headerImage - full width images #}
      {# Full width header image - light theme #}
        <picture class="block dark:hidden">
        <source media="(min-width: 1280px)" srcset="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiXl }}{{ heroContent.cloudinaryUrlBranch }}-light.webp"/>
        <source media="(min-width: 1024px)" srcset="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiLg }}{{ heroContent.cloudinaryUrlBranch }}-light.webp"/>
        <source media="(min-width: 768px)" srcset="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiMd }}{{ heroContent.cloudinaryUrlBranch }}-light.webp"/>
        <source media="(min-width: 640px)" src="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiSm }}{{ heroContent.cloudinaryUrlBranch }}-light.webp"/>
        <img class="max-w-full mx-auto" aria-hidden="true" decoding="async" srcset="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiDefault }}{{ heroContent.cloudinaryUrlBranch }}-light.jpg" alt="{{ imageAlt or "ImageAlt NOT SET" }}"/>
      </picture>
      {# Full width header image - dark theme #}
      <picture class="hidden dark:block">
        <source media="(min-width: 1280px)" srcset="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiXl }}{{ heroContent.cloudinaryUrlBranch }}-dark.webp"/>
        <source media="(min-width: 1024px)" srcset="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiLg }}{{ heroContent.cloudinaryUrlBranch }}-dark.webp"/>
        <source media="(min-width: 768px)" srcset="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiMd }}{{ heroContent.cloudinaryUrlBranch }}-dark.webp"/>
        <source media="(min-width: 640px)" srcset="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiSm }}{{ heroContent.cloudinaryUrlBranch }}-dark.webp"/>
        <img class="max-w-full mx-auto" aria-hidden="true" decoding="async" src="{{ heroContent.cloudinaryUrlRoot }}{{ heroContent.cloudinaryUrlApiDefault }}{{ heroContent.cloudinaryUrlBranch }}-dark.jpg" alt="{{ imageAlt or "ImageAlt NOT SET" }}"/>
      </picture>
    </figure>
    <article
      id="heroContainer"
      class="mt-28 xl:mt-36 relative min-h-80 mx-auto max-w-7xl flex flex-col md:flex-row items-center">
      {# Only show the video on the homepage #}
      {% if heroContent.page === 'homepage' %}
        <div class="relative">
          <div class="hidden absolute top-0 inset-x-0 h-1/2 lg:block" aria-hidden="true"></div>
          <div class="max-w-7xl mx-auto bg-transparent lg:px-8">
            <div class="lg:grid lg:grid-cols-12">
              <div class="relative z-10 lg:col-start-1 lg:row-start-1 lg:col-span-4 lg:py-16 lg:bg-transparent">
                <div class="absolute inset-x-0 h-1/2 lg:hidden" aria-hidden="true"></div>
                <div class="max-w-md mx-auto px-4 sm:max-w-3xl sm:px-6 lg:max-w-none lg:p-0">
                  <div class="aspect-w-10 aspect-h-6 sm:aspect-w-2 sm:aspect-h-1 lg:aspect-w-1">
                    <img
                      class="hidden dark:block object-cover object-center rounded-3xl shadow-2xl"
                      src="https://res.cloudinary.com/goodreds/image/upload/q_auto,w_auto,f_auto/v1673341421/goodreds-netlify/hero/fernand-de-canne-ApfyUz5c5Q0-unsplash.webp"
                      alt=""/>
                      <img
                      class="block dark:hidden object-cover object-center rounded-3xl shadow-2xl"
                      src="https://res.cloudinary.com/goodreds/image/upload/q_auto,w_auto,f_auto/v1679841647/goodreds-netlify/hero/felipepelaquim-h8h4IoTJJqM-unsplash.jpg"
                      alt=""/>
                    </div>
                </div>
              </div>
              <div class="relative lg:dark:bg-neutral-50/20 lg:col-start-3 lg:row-start-1 lg:col-span-10 lg:rounded-3xl lg:grid
                  lg:grid-cols-10 lg:items-center">
                <div class="hidden absolute inset-0 overflow-hidden rounded-3xl lg:block" aria-hidden="true">
                  <svg
                    class="absolute bottom-full left-full transform translate-y-1/3 -translate-x-2/3 xl:bottom-auto xl:top-0
                      xl:translate-y-0"
                    width="404"
                    height="384"
                    fill="none"
                    viewBox="0 0 404 384"
                    aria-hidden="true">
                    <defs>
                      <pattern id="64e643ad-2176-4f86-b3d7-f2c5da3b6a6d" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                        <rect x="0" y="0" width="4" height="4" class="text-indigo-500" fill="currentColor"/>
                      </pattern>
                    </defs>
                    <rect width="404" height="384" fill="url(#64e643ad-2176-4f86-b3d7-f2c5da3b6a6d)"/>
                  </svg>
                  <svg
                    class="absolute top-full transform -translate-y-1/3 -translate-x-1/3 xl:-translate-y-1/2"
                    width="404"
                    height="384"
                    fill="none"
                    viewBox="0 0 404 384"
                    aria-hidden="true">
                    <defs>
                      <pattern id="64e643ad-2176-4f86-b3d7-f2c5da3b6a6d" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                        <rect x="0" y="0" width="4" height="4" class="text-indigo-500" fill="currentColor"/>
                      </pattern>
                    </defs>
                    <rect width="404" height="384" fill="url(#64e643ad-2176-4f86-b3d7-f2c5da3b6a6d)"/>
                  </svg>
                </div>
                <div class="relative max-w-md mx-auto py-12 px-4 space-y-6 sm:max-w-3xl sm:py-16 sm:px-6 lg:max-w-none lg:p-0 lg:col-start-4
                    lg:col-span-6">
                  <h1 class="break-words font-chinook text-5xl sm:text-6xl md:text-6xl lg:text-6xl text-stone-900 drop-shadow-sm
                      shadow-neutral-400 dark:shadow-black dark:text-white">
                    {{ heroContent.headline }}
                    <span class="before:block before:absolute before:-inset-1 before:-skew-y-1 before:bg-yellow-400 relative inline-block
                        shadow-md">
                      <span class="relative bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500">{{ heroContent.headlineEmphasis }}</span>
                    </span>
                  </h1>
                  <p class="above-the-fold text-2xl text-slate-900/70 dark:text-white/70 font-medium shadow-slate-900/50 drop-shadow">
                    {{ heroContent.description }}
                  </p>
                  <div id="buttons" class="flex flex-col mx-auto w-full lg:w-3/4 lg:ml-0">
                    <div class="above-the-fold buttons flex shrink flex-col justify-start items-center gap-8 text-center lg:flex-row">
                      <a href="#" class="buttonDefaults buttonSecondaryAlt text-sky-700 dark:text-pink-500 mx-auto w-full">
                        {{ heroContent.buttonTextAlt }}
                      </a>
                      <a href="#" class="buttonDefaults buttonPrimary bg-sky-700 dark:bg-pink-500 text-sky-50 mx-auto w-full">
                        <span class="drop-shadow-md">{{ heroContent.buttonText }}</span>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
