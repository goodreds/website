{% set navPages = collections.all | eleventyNavigation %}
<ul class="navigation-unordered_list-small scale-110 sm:scale-125 md:scale-150">
  {%- for entry in navPages %}
    <li class="navigation-unordered_list-item-small">
      <span class="navigation-unordered_list-item_icon-small">
        <img class="drop-shadow-sm" src="../../_assets/_icons/_navigation/{{ entry.icon | safe }}"
                alt="">
      </span>
      <span class="navigation-unordered_list-item_text_link-small">
        <a {% if entry.url == page.url %} class="active-class" {% endif %} href="{{ entry.url | url }}">{{ entry.title }}</a>
      </span>
    </li>
  {%- endfor %}
</ul>
